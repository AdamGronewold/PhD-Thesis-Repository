<?xml version="1.0"?>
<launch>

	<!-- use this launch file to launch to terrain model in Gazebo and only Gazebo -->

	<!-- arguments you can pass this launch file, for example paused:=true -->
	<arg name="paused" default="false"/>
	<arg name="use_sim_time" default="true"/>
	<arg name="gui" default="true"/>
	<arg name="headless" default="false"/>
	<arg name="debug" default="false"/>
	<arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="0.5"/>

	<!-- Assume empty_world.launch login, with different name to launch -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find terrain_patches)/worlds/terrain_patches2.world"/>
		<arg name="debug" value="$(arg debug)" />
		<arg name="gui" value="$(arg gui)" />
		<arg name="paused" value="$(arg paused)"/>
		<arg name="use_sim_time" value="$(arg use_sim_time)"/>
		<arg name="headless" value="$(arg headless)"/>
	</include>

	<!-- Load the robot into the ROS Parameter Server -->
	<param name="robot_description" command="$(find xacro)/xacro --inorder '$(find shrew_robot)/urdf/shrew_robot.urdf.xacro'" />

	<!-- Run a python script to the send a service call to gazebo_ros to spawn the URDF model-->
    <node name="spawn_shrew" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
    args="-urdf -model shrew_robot -z $(arg z) -param robot_description"/>

</launch>
