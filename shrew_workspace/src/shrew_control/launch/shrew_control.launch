<?xml version='1.0'?>
<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find shrew_control)/config/shrew_control.yaml" command="load"/>

  <!-- load the controllers -->
  <!--The controller_spawner node starts the joint position controllers 
  for the robot by running a python script that makes a service call to the ros_control 
  controller manager. The service calls tell the controller manager which controllers you want. 
  It also loads a third controller that publishes the joint states of all the joints 
  with hardware_interfaces and advertises the topic on /joint_states. The spawner is just 
  a helper script for use with roslaunch.-->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="/shrew_robot" args="joint_state_controller
					  internal_joint_position_controller
					  front_yaw_position_controller
					  rear_yaw_position_controller
					  front_roll_position_controller
					  rear_roll_position_controller
					  wheel_FL_velocity_controller
					  wheel_FR_velocity_controller
					  wheel_BL_velocity_controller
					  wheel_BR_velocity_controller"/>
					  
					  <!--wheel_FL_position_controller
					  wheel_FR_position_controller
					  wheel_BL_position_controller
					  wheel_BR_position_controller-->

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	respawn="false" output="screen">
    <remap from="/joint_states" to="/shrew_robot/joint_states" />
  </node>

</launch>
